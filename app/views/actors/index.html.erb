<h1>Actors</h1>
<%= form_tag actors_path,method: :get do %>
  <p>
    <%= text_field_tag :search,params[:search]%>
    <%= submit_tag "search",:name => nil%>
  </p>
<% end %>

<% if @actors.present? %>
  <ul>
    <% @actors.each do |m| %>
      <li>
        <%= link_to m.name,actor_path(m) %>
        &mdash;
        <%= m.year %>
        
      </li>
    <% end %>
  </ul>
<% end %>
<% if current_user.try(:admin?) %>
<%= link_to 'Add Actor',new_actor_path%>
<br/>
<%end %>
<%= link_to 'Back' ,:back %>
<br/>
<%= link_to 'Home Page' ,users_path %>

